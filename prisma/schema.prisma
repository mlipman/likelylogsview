generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DB_URL")
}

model log {
  id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  contents String
  pic_id1 String?
  pic_id2 String?
  pic_id3 String?
  position Int? @unique
}

model conversation {
  id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  message_list_json String
}
